{% extends 'base.html.twig' %}

{% block title %}
	All programs
{% endblock %}

{% block body %}
	<h1 class="m-4">Toutes les séries disponibles:
	</h1>
	<div class="container">
		<div class="d-flex flex-wrap p-2">
			{% for program in programs %}
				<div class="card m-3" style="width: 18rem;">
					<img src="{{ program.poster }}" class="card-img-top" alt="...">
					<div class="card-body">
						<h5 class="card-title">{{ program.title }}</h5>
						<p class="card-text">{{ program.synopsis }}</p>
					</div>
					<ul class="list-group list-group-flush">
						<li class="list-group-item">{{ program.category.name }}</li>
						<li class="list-group-item">{{ program.country }}</li>
						<li class="list-group-item">{{ program.year }}</li>
					</ul>
					<div class="card-body">
						<a href="{{ path("program_show", { id: program.id } ) }}" class=" card-link">Voir la fiche</a>
						<a href="#" class="card-link">Another link</a>
					</div>
				</div>
			{% else %}
				Aucune série trouvée.
			{% endfor %}
		</div>
	</div>

	<a href="{{ path('app_index') }}">
		Retour à l'accueil
	</a>

{% endblock %}
