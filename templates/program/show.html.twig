{% extends 'base.html.twig' %}

{% block title %}Series #{{ program.id }}
{% endblock %}

{% block body %}
	<div class="media container">
		<div class="d-flex flex-wrap p-2">
			<figure class="figure">
				<img class="figure-img img-fluid rounded m-2 " width='90%' src="{{ program.poster }}" alt="...">
			</figure>
			<a href="{{ path('program_edit', {'id': program.id}) }}">Modifier</a>

			<div class="media-body">
				<h1 class="mt-0">{{ program.title }}</h1>
				<p>{{ program.synopsis }}</p>
				<p>Catégorie :
					{{ program.category.name }}</p>

				<strong>Acteurs :</strong>
				<ul>
					{% for actor in program.actors %}
						<li>{{ actor.name }}
							-
							<a href="{{ path('app_actor_show', {'id': actor.id}) }}">Voir l'acteur</a>
						</li>
					{% else %}
						<li>Aucun acteur pour cette série</li>
					{% endfor %}
				</ul>

				{% for season in program.seasons %}
					<div>
						<h2>
							Saison # :
							{{ season.number }}
						</h2>
						<ul>
							<li>{{ season.year }}</li>
							<li>{{ season.description }}</li>
							<li>
								<a href="{{ path("program_season_show", { program_id: program.id, season_id: season.id }) }}">Voir le détail de la saison</a>
							</li>
						</ul>
					{% else %}
						<p>Aucune saison trouvée.</p>
					{% endfor %}

					<a href="{{ path('program_index') }}">
						Retour à la liste des programmes
					</a>
				</div>

			</div>
		</div>


	{% endblock %}
