{% extends 'base.html.twig' %}

{% block title %}Saison #{{ season.number }}
	de
	{{ program.title }}
{% endblock %}

{% block body %}
	<div class="media container">
		<div class="d-flex flex-wrap p-2">
			<figure class="figure">
				<img class="figure-img img-fluid rounded m-2 " width='90%' src="{{ program.poster }}" alt="...">
			</figure>
			<div class="media-body">
				<h1 class="mt-0">{{ program.title }}</h1>
				<p>{{ program.synopsis }}</p>
				<p>Catégorie :
					{{ program.category.name }}</p>
				<div>
					<h2>
						Saison :
						{{ season.number }}
					</h2>
					<ul>
						<li>
							<strong>Année:</strong>
							{{ season.year }}</li>
						<li>
							<strong>Description:
							</strong>
							{{ season.description }}</li>
						<br>

						<li>
							<strong>Liste des épisodes</strong>
						</li>
						<br>

						<ul>
							{% for episode in season.episodes %}
								<li>
									<strong>Episode:
										{{ episode.number }}:</strong>
									"{{ episode.title }}"
									<br>
									{{ episode.synopsis }}</li>
							</li>
							<li>
								<a href="{{ path("program_episode_show", { program_id: program.id, season_id: season.id, episode_id: episode.id }) }}">Voir le détail de l'épisode</a>
							</li><br>
						{% endfor %}
					</ul>
				</li>
			</ul>
		</li>
	</ul>

	<a href="{{ path('program_index') }}">
		Retour à la liste des programmes
	</a>
</div></div>{% endblock %}
