{% extends 'base.html.twig' %}

{% block title %}Saisons #{{ program.id }}
	de
	{{ program.title }}
{% endblock %}

{% block body %}
	<div class="media container">
		<div class="d-flex flex-wrap p-2">
			<figure class="figure">
				<img class="figure-img img-fluid rounded m-2 " width='90%' src="https://www.francetvinfo.fr/pictures/e_lojTVJe2SMSmn05NtRev0BLNA/1500x843/2021/08/03/phpxwl3vR.jpg" alt="...">
			</figure>
			<div class="media-body">
				<h1 class="mt-0">{{ program.title }}</h1>
				<p>{{ program.synopsis }}</p>
				<p>Catégorie :
					{{ program.category.name }}</p>
				<div>
					<h2>
						Saisons :
						{{ season.number }}
					</h2>
					<ul>
						<li>
							<strong>Année:</strong>
							{{ season.year }}</li>
						<li>
							<strong>Descritpion:
							</strong>
							{{ season.description }}</li>
						<br>

						<li>
							<strong>Liste des épisodes</strong>
						</li>
						<br>

						<ul>
							{% for episode in season.episodes %}
								<li>
									<strong>Episode:
										{{ episode.number }}:</strong>
									"{{ episode.title }}"
									<br>
									<br>

									{{ episode.synopsis }}</li>
								<br>

							</li>
						{% endfor %}
					</ul>
				</li>
			</ul>
		</li>
	</ul>

	<a href="{{ path('program_index') }}">
		Retour à la liste des programmes
	</a>
</div></div>{% endblock %}
