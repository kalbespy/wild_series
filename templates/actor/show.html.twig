{% extends 'base.html.twig' %}

{% block title %}Actor
{% endblock %}

{% block body %}
	<h1>Actor</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ actor.id }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ actor.name }}</td>
			</tr>
			<tr>
				<th>Photo</th>
				<td>
					<img class="figure-img img-fluid rounded m-2 " width='90%' src="{{ vich_uploader_asset(actor) }}" alt="{{ actor.name }}">
				</td>
			</tr>
			<tr>
				<th>Séries</th>
				<td>
					{% for program in actor.programs %}
						<li>
							{{ program.title }}
							({{ program.year }}) -
							<a href="{{ path('program_show', {'slug': program.slug}) }}">Voir la série</a>
						</li>
					{% endfor %}
				</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_actor_index') }}">back to list</a>

	<a href="{{ path('app_actor_edit', {'id': actor.id}) }}">edit</a>

	{{ include('actor/_delete_form.html.twig') }}
{% endblock %}
